{
  "name": "jigsaw-mf",
  "version": "1.0.0",
  "description": "a micro-frontend solution",
  "main": "./src/index.js",
  "module": "./dist/jigsaw.esm.js",
  "files": [
    "dist",
    "src",
    "example",
    "!node_modules"
  ],
  "scripts": {
    "build": "rollup -c",
    "init": "lerna bootstrap",
    "run:build": "lerna run --parallel build",
    "run:fragment": "lerna run --parallel run:app",
    "link": "yarn unlink && yarn link && lerna run --parallel link",
    "lint:report": "eslint --ext .jsx,.js src -f checkstyle -o report_zacc_eslint_js.xml"
  },
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.6.0",
    "@babel/plugin-proposal-class-properties": "^7.7.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.6.2",
    "@babel/plugin-transform-async-to-generator": "^7.5.0",
    "@babel/plugin-transform-runtime": "^7.6.2",
    "@babel/preset-env": "^7.6.0",
    "@typescript-eslint/eslint-plugin": "2.5.0",
    "@typescript-eslint/parser": "2.5.0",
    "babel-eslint": "10.0.3",
    "cross-env": "^5.2.1",
    "eslint": "6.5.1",
    "eslint-config-za": "2.1.0",
    "eslint-plugin-babel": "5.3.0",
    "eslint-plugin-import": "2.18.2",
    "eslint-plugin-jsx-a11y": "6.2.3",
    "eslint-plugin-react": "7.16.0",
    "eslint-plugin-react-hooks": "2.2.0",
    "eslint-plugin-vue": "5.2.3",
    "husky": "^3.0.9",
    "lerna": "^3.18.3",
    "prettier": "^1.18.2",
    "pretty-quick": "^2.0.1",
    "rollup": "^1.26.3",
    "rollup-plugin-babel": "^4.3.3",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "typescript": "3.6.4"
  },
  "dependencies": {
    "@babel/runtime": "^7.7.2",
    "eventemitter2": "^5.0.1",
    "html-entry": "^1.0.7"
  },
  "sideEffects": false,
  "browserslist": [
    ">0.2%",
    "not dead",
    "not op_mini all"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  }
}
